<Window x:Class="TestySZP.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Testy SZP - Beta v1.0" Height="400" Width="400"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Správa osob" Command="{Binding OpenPersonManagementCommand}" Width="200" Height="50" Margin="0,5"/>
            <Button Content="Správa otázek" Command="{Binding OpenQuestionManagementCommand}" Width="200" Height="50" Margin="0,5"/>
            <Button Content="Generování testu" Click="OpenGenerateTestWindow_Click" Width="200" Height="50" Margin="0,5"/>
            <Button Content="Ukončit aplikaci" Click="CloseApp" Width="200" Height="50"  Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
